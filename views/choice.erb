<DisplayForm>
  <Script>
    <![CDATA[
   <UiScreen infoLevel="Normal">
     <AutoTransition>300</AutoTransition>
     <Operations>
        <% if @prmtr[:submit]  %>
		<Op type="Submit" action="<%= @prmtr[:submit] %>">
		</Op>
		<% end %>
		<% if @prmtr[:back] %>
		<Op type="Back" action="<%= @prmtr[:back] %>">
		</Op>
		<% end %>
     </Operations>
     <IoScreen>
       <IoObject>
         <Title><%= @prmtr[:title] %></Title>
         <Selection id="profils" multiple="false">
           <% @prmtr[:profils].each do |profil| %>
             <Item value="<%= profil %>">
               <Label><%= profil %></Label>
             </Item>
           <% end %>
         </Selection>
       </IoObject>
     </IoScreen>
   </UiScreen>
    ]]>
  </Script> 
</DisplayForm>

